generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String
  Role          String 
  Designation   String  
  scores        Score[]
  feedback      Feedback[]
  training      Training[]
}

model Training {
  id            Int       @id @default(autoincrement())
  name          String
  start_date    DateTime 
  end_date      DateTime
  T_id          Int
  trainer       Employee  @relation(fields: [T_id], references: [id])
  scores        Score[]
}

model Score {
  id            Int       @id @default(autoincrement())
  T_id          Int 
  training      Training  @relation(fields: [T_id], references: [id])
  E_id          Int
  employee      Employee  @relation(fields: [E_id], references: [id])
  score         Int
}

model Feedback {
  id            Int       @id @default(autoincrement())
  punctuality   Int
  discipline    Int
  E_id          Int
  employee      Employee  @relation(fields: [E_id], references: [id])
}